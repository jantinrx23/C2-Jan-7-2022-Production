<div class="text-logos" style="background-color: {{section.settings.section_color}};">
  <div class="section">
    <div class="container">
      <div class="text-section">
        <h2>{{ section.settings.heading }}</h2>
        <a href="{{ section.settings.link }}">{{ section.settings.link_text }}</a>
      </div>
      
      <div class="logos-wrap">
        <div class="logos-row">
          {% for block in section.blocks %}
          <div class="logo">
          	<img src="{{ block.settings.logo_image | img_url : 'master'}}">
          </div>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Text and Logos",
    "settings": [
		{
			"type": "color",
			"id": "section_color",
			"label": "Background Color",
			"default": "#000"
		},
		{
			"type": "text",
			"id": "heading",
			"label": "Heading",
			"default": "A trusted and accredited Independent pharmacy."
		},
		{
			"type": "text",
			"id": "link_text",
			"label": "Link Text",
			"default": "> Responsible Data Handling, Learn More"
		},
		{
			"type": "url",
			"id": "link",
			"label": "URL"
		}
	],
	"blocks": [
	{
		"type": "image",
		"name": "Logos",
		"settings": [
          {
              "type": "image_picker",
              "id": "logo_image",
              "label": "Logo Image"
          }
		]
	}
	
	],
	"presets": [
	{
		"name": "Text and Logos",
		"category": "Logos"
	}
	
	]
  }
{% endschema %}