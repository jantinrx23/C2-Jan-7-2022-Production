<div class="cta-wrapper {% if section.settings.color_mode == 'dark-mode' %}dark-mode{% endif %}">
  <div class="section">
    <div class="cta-row">
      <div class="cta-content">
        <h2>{{ section.settings.heading }}</h2>
        <h3>{{ section.settings.heading_2 }}</h3>
        <h4>{{ section.settings.heading_3 }}</h4>
      </div>
      <div class="cta-btn-wrap">
        {% unless section.settings.cta_btn_url == blank %}
        <a href="{{ section.settings.cta_btn_url }}">{{ section.settings.cta_btn_title }}</a>
        {% endunless %}
        <p>{{ section.settings.cta_note }}</p>
      </div>
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Call to action",
    "settings": [
	{
              "type": "select",
              "id": "color_mode",
              "label": "Select Color Mode",
              "options": [
                  {
                  "value": "light-mode","label": "Light Mode"
                  },
                  {
                  "value": "dark-mode","label": "Dark Mode"
                  }
				]
            },
            {
              "type": "text",
              "id": "heading",
              "label": "Heading 1",
              "default": "Not sure how to proceed?"
            },
            {
              "type": "text",
              "id": "heading_2",
              "label": "Heading 2",
              "default": "Talk to a TIN pharmacy specialist."
            },
            {
              "type": "text",
              "id": "heading_3",
              "label": "Heading 3",
              "default": "We're ready to take your call."
            },
            {
              "type": "text",
              "id": "cta_btn_title",
              "label": "Button Title",
              "default": "(209) 850-8828"
            },
            {
              "type": "url",
              "id": "cta_btn_url",
              "label": "Button Link"
            },
			{
              "type": "text",
              "id": "cta_note",
              "label": "Special Note",
				"default": "Specialist are available 9am-5pm PST."
			}
	]
  }
{% endschema %}

